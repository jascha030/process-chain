{
    "name": "jascha030/template",
    "description": "Template repo for creating composer packages",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jascha030",
            "email": "contact@jaschavanaalst.nl"
        }
    ],
    "homepage": "https://github.com/jascha030",
    "autoload": {
        "psr-4": {
            "Jascha030\\Process\\Chain\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jascha030\\Process\\Chain\\": "tests/Unit/"
        }
    },
    "repositories": [],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "~8.1||~8.2",
        "illuminate/collections": "^10.4",
        "phpoption/phpoption": "^1.9",
        "symfony/console": "^6.2",
        "symfony/process": "^6.2"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "roave/security-advisories": "dev-latest",
        "symfony/filesystem": "^6.2",
        "symfony/var-dumper": "^6.2"
    },
    "config": {
        "platform": {
            "php": "8.1"
        },
        "platform-check": false,
        "sort-packages": true,
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": true,
            "forward-command": false
        }
    },
    "archive": {
        "exclude": [
            ".idea/",
            ".phive/",
            ".var/",
            "tests/",
            "tools/",
            "tools/*",
            "vendor-bin/",
            ".editorconfig",
            ".gitattributes",
            ".gitignore",
            ".php-cs-fixer.dist.php",
            ".phpstorm.meta.php",
            "phpstan.neon.dist",
            "phpunit.xml.dist"
        ]
    },
    "scripts": {
        "phpunit": "tools/phpunit.phar",
        "php-cs-fixer": "tools/php-cs-fixer",
        "phpstan": "vendor/bin/phpstan",
        "format": "@php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "test": "@phpunit -c phpunit.xml.dist",
        "analyze": "@phpstan analyze --config=phpstan.neon.dist",
        "analyze:baseline": "@analyze --generate-baseline"
    }
}
